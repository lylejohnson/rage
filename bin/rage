#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), "../lib/rage/version")

if %w(--version -v).include? ARGV.first
  puts "RAGE #{RAGE::VERSION::STRING}"
  exit 0
end

require File.join(File.dirname(__FILE__), "../lib/rage/generators/application")

RAGE::Generators::ApplicationGenerator.new(ARGV)
